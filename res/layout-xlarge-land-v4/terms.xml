<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    android:id="@id/chillingo_scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/chillingo_mainLayout"
        android:paddingLeft="250.0dip"
        android:paddingRight="250.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:measureWithLargestChild="false">
        <TextView
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:id="@id/chillingo_introTitleView"
            android:paddingTop="7.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/chillingo_introTitle" />
        <TextView
            android:id="@id/chillingo_introTextView"
            android:paddingTop="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/chillingo_introText" />
        <TableLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.0dip"
            android:layout_marginBottom="7.0dip">
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:layout_gravity="left"
                    android:id="@id/chillingo_ageLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7.0dip"
                    android:text="@string/chillingo_ageLabel"
                    android:layout_weight="75.0" />
                <EditText
                    android:enabled="true"
                    android:textSize="30.0dip"
                    android:layout_gravity="center|right"
                    android:id="@id/chillingo_ageEditText"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="80.0dip"
                    android:maxLength="2"
                    android:numeric="integer"
                    android:editable="true"
                    android:layout_weight="25.0"
                    android:inputType="number" />
            </TableRow>
        </TableLayout>
        <TextView
            android:id="@id/chillingo_iAcceptLabel"
            android:paddingTop="14.0dip"
            android:paddingBottom="7.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/chillingo_iAcceptLabel" />
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="7.0dip"
            android:paddingBottom="14.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:layout_gravity="left"
                android:id="@id/chillingo_declineButton"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3.0dip"
                android:text="@string/chillingo_declineButton"
                android:layout_weight="50.0" />
            <Button
                android:layout_gravity="right"
                android:id="@id/chillingo_acceptButton"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3.0dip"
                android:text="@string/chillingo_acceptButton"
                android:layout_weight="50.0" />
        </LinearLayout>
        <Button
            android:id="@id/chillingo_privacyButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.0dip"
            android:text="@string/chillingo_privacyPolicyButton" />
        <Button
            android:id="@id/chillingo_termsButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.0dip"
            android:text="@string/chillingo_termsButton" />
        <Button
            android:id="@id/chillingo_eulaButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.0dip"
            android:text="@string/chillingo_eulaButton" />
    </LinearLayout>
</ScrollView>